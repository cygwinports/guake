inherit gnome2

NAME="guake"
VERSION=0.8.8
RELEASE=2
CATEGORY="GNOME Shells"
SUMMARY="Drop-down terminal for GNOME"
DESCRIPTION="Guake is a top-down terminal for Gnome (in the style of Yakuake
for KDE, Tilda or the terminal used in Quake)."
HOMEPAGE="http://guake-project.org/"
SRC_URI="https://github.com/guake/guake/archive/${VERSION}/guake-${VERSION}.tar.gz"
PATCH_URI="0.8.8-ayatana.patch"

ARCH=noarch

REQUIRES="python2-ayatana_appindicator"

DIFF_EXCLUDES="guake guake-prefs globals.py"
